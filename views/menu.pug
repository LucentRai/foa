extends base

block content
	// Modal
	#addToCartModal.modal.fade(tabindex="-1" aria-labelledby="addToCartModalLabel" aria-hidden="true")
		.modal-dialog
			.modal-content
				.modal-header
					h1#addToCartModalLabel.modal-title.fs-5 Your Cart
					button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
				.modal-body
					table.table
						thead
							tr
								th #
								th Food
								th Quantity
								th Price
						tbody
						tfoot
							tr
								td.text-center(colspan="3") Total
								td Rs. 

				.modal-footer
					button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Close
					button.btn.btn-primary#saveBtn(type="button") Save
					button.btn.btn-success#orderBtn(type="button") Order

	.album.py-5.bg-light
		.container
			h1.text-center.mt-4.mb-4 #{h1}
			.row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
				each food in foods
					.col
						.card.shadow-sm
							img.card-img-top(src=`/img/foods/${food.images[0]}` alt='')
							.card-body
								h2.card-title.text-center({attribute}) #{food.name}
								p.card-text
									| #{food.summary}
								.d-flex.justify-content-between.align-items-center
									if user
										button.btn.btn-primary.addToCartBtn(type="button" data-bs-toggle="modal" data-bs-target="#addToCartModal" data-food-name=`${food.name}` data-food-price=`${food.price}`) Add to Cart
									small.display-6 Rs.
										span.price #{food.price}